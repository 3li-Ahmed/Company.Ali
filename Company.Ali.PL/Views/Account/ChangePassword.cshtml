@model Company.Ali.PL.DTOs.ChangePassword
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_AuthView.cshtml";
}

<div class="main-agileinfo">
    <div class="agileits-top">
        <div asp-validation-summary="All" class="m-3 alert alert-info"></div>
        <form action="ChangePassword" method="post">
            
            <input class="text" asp-for="NewPassword" placeholder="New Password" required="">
            <input class="text w3lpass" asp-for="ConfirmPassword" placeholder="Confirm Password" required="">
            <input type="submit" value="Reset Password">
        </form>
    </div>
</div>

@section ValidationSection
{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive"></script>
}