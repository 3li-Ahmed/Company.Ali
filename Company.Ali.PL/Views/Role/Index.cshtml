@model IEnumerable<Company.Ali.PL.DTOs.RoleDto>
@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Index</title>
</head>
<body>
    <h1>All Roles</h1>
    <br />
    <br />
    <form>
        <div class="container">
            <div class="row">
                <div class="col-6">
                    <input placeholder="Search By First Name" name="SearchInput" class="form-control"/>
                </div>
                <div class="col-6">
                    <input type="submit" class="btn btn-success" value="Search" />
                </div>
            </div>
        </div>
        <a asp-controller="Role" asp-action="Create" class="btn btn-primary">Create Role</a>
        <br />
        <br />
    </form>
    <br />
    <br />
    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    
                </tr>
            </thead>
            <tbody>
                @foreach (var role in Model)
                {
                    <tr>
                        <td>@role.Id</td>
                        <td>@role.Name</td>
                         <partial name = "_Partial" model="@role.Id"/>
                      
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <div class="mt-4 alert alert-warning">
            <h4>There is No Roles :(</h4>
        </div>
    }


</body>

</html>
