@model IEnumerable<Company.Ali.DAL.Models.Employee>
@{
    // Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <title>Index</title>
</head>
<body>

    <a asp-controller="Employee" asp-action="Create" class="btn btn-primary">Create Employee</a>
    <br />
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-striped table-hover">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Email</th>
                    <th>Address</th>
                    <th>Phone</th>
                    <th>Salary</th>
                    <th>IsActive</th>
                    <th>IsDeleted</th>
                    <th>@Html.DisplayNameFor(E => E.HiringDate)</th>
                    <th>@Html.DisplayNameFor(E => E.CreateAt)</th>
                    <th>Details</th>
                    <th>Update</th>
                    <th>Delete</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var employee in Model)
                {
                    <tr>
                        <th>@employee.Name</th>
                        <th>@employee.Age</th>
                        <th>@employee.Email</th>
                        <th>@employee.Address</th>
                        <th>@employee.Phone</th>
                        <th>@employee.Salary</th>
                        <th>@employee.IsActive</th>
                        <th>@employee.IsDeleted</th>
                        <th>@employee.HiringDate)</th>
                        <th>@employee.CreateAt)</th>
                        <td>
                            <a asp-controller="Employee" asp-action="Details" asp-route-id="@employee.Id" class="btn btn-warning">
                                <i class="fas fa-eye"></i> Details
                            </a>
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@employee.Id" class="btn btn-success">
                                <i class="fas fa-edit"></i> Update
                            </a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@employee.Id" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <div class="mt-4 alert alert-warning">
            <h4>There is No Employees :(</h4>
        </div>
    }


</body>

</html>
